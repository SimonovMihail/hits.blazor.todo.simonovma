@page "/add-profile"
@rendermode InteractiveServer
@using TodoServerApp.Data
@using TodoServerApp.Data.Interfaces
@inject IDataService data
@inject NavigationManager header

<h3>Создать анкету</h3>

<div class="row">
    <div class="col-md-6">
        <EditForm Model="@newProfile" OnValidSubmit="SaveProfile" FormName="CreateProfileForm">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label>Имя</label>
                <InputText class="form-control" @bind-Value="newProfile.Name" />
            </div>

            <div class="mb-3">
                <label>Возраст</label>
                <InputNumber class="form-control" @bind-Value="newProfile.Age" />
            </div>

            <div class="mb-3">
                <label>Город</label>
                <InputText class="form-control" @bind-Value="newProfile.City" />
            </div>

            <div class="mb-3">
                <label>О себе</label>
                <InputTextArea class="form-control" @bind-Value="newProfile.Bio" />
            </div>

            <div class="mb-3">
                <label>Интересы</label>
                <div class="card p-2">
                    @if (allInterests.Count == 0)
                    {
                        <p>Загрузка тегов...</p>
                    }
                    else
                    {
                        @foreach (var interest in allInterests)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox"
                                       id="tag_@interest.Id"
                                       @onchange="() => ToggleInterest(interest.Id)">
                                <label class="form-check-label" for="tag_@interest.Id">
                                    @interest.Title
                                </label>
                            </div>
                        }
                    }
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Создать</button>
        </EditForm>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    public Profile newProfile { get; set; } = new();

    private List<Interest> allInterests = new();

    private List<int> selectedInterestIds = new();

    protected override async Task OnInitializedAsync()
    {
        // Загружаем список тегов из базы
        var interests = await data.GetInterestsAsync();
        allInterests = interests.ToList();
    }

    private void ToggleInterest(int interestId)
    {
        if (selectedInterestIds.Contains(interestId))
        {
            selectedInterestIds.Remove(interestId);
        }
        else
        {
            selectedInterestIds.Add(interestId);
        }
    }

    private async Task SaveProfile()
    {
        await data.AddProfileAsync(newProfile, selectedInterestIds);

        header.NavigateTo("/");
    }
}